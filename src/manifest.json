{
  "manifest_version": 3,
  "name": "Twitch Yoink",
  "version": "1.3",
  "description": "This extension hides 'yo' and 'nothing' messages in Twitch chat.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-yoink@hdbyte",
      "strict_min_version": "109.0"
    }
  },
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ]
}